{
    "compilerOptions": {
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "module": "commonjs",
        "sourceMap": true,
        "target": "es2017",
        "strict": true,
        "noEmit": true,
        "baseUrl": ".",
        "lib": [
            "es2017",
            "es2015.iterable"
        ]
    },
    "include": [
        "./schema.ts"
    ]
}
